pipeline {
  environment {
    registry = "rachitsrivastava007/employee"
    registryCredential = 'rachitsrivastava007'
    dockerImage = ''
  }
  agent any
  stages {
    stage('Building image') {
      steps{
       dir("employee") {
        script {
          dockerImage = docker.build registry + ":$BUILD_NUMBER"
        }
       }
      }
    }
    stage('Push image') {
      steps{
    /* Finally, we'll push the image with two tags:
    * First, the incremental build number from Jenkins
    * Second, the 'latest' tag. */
    withCredentials([usernamePassword( credentialsId: 'rachitsrivastava007', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {

    docker.withRegistry('', 'rachitsrivastava007') {
    sh "docker login -u ${USERNAME} -p ${PASSWORD}"
    dockerImage.push("${env.BUILD_NUMBER}")
    dockerImage.push("latest")
    }
    }
    }
    }
    
    
    stage('Run docker') {
      steps{
        sh "docker run -d -e CONFIG_FILE=/app/config.yaml $registry:$BUILD_NUMBER"
      }
    }
  }
}
